#compdef octoprint-cli

_octoprint-cli() {
	local curcontext="$curcontext" state line
	typeset -A opt_args
	_arguments \
		'1: :->category'\
		'*: :->command'
	case $state in 
	category)
		_arguments '1:Categories:(help version print temp connection files system continuous)'
	;;
	*)
		case $words[2] in
		print)
			compadd "$@" status start pause resume cancel select
		;;
		temp)
			compadd "$@" status extruder bed
		;;
		connection)
			compadd "$@" status connect disconnect
		;;
		files)
			compadd "$@" list info upload
		;;
		system)
			compadd "$@" restart restart-safe reboot shutdown
		;;
		*)
		esac
	esac
}

_octoprint-cli "$@"
